<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ask.qa_service.dao.CommonCodeDao">

    <resultMap id="BaseResultMap" type="com.ask.qa_service.entity.po.CommonCodePo">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="codeName" column="code_name" jdbcType="VARCHAR"/>
        <result property="codeValue" column="code_value" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="updatedBy" column="updated_by" jdbcType="VARCHAR"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        code_name,
        code_value,
        remark,
        created_by,
        created_time,
        updated_by,
        updated_time
    </sql>

    <insert id="insert" parameterType="com.ask.qa_service.entity.po.CommonCodePo">
        insert into common_code (id,
                                 code_name,
                                 code_value,
                                 remark,
                                 created_by,
                                 created_time,
                                 updated_by,
                                 updated_time)
        VALUES (#{id},
                #{codeName},
                #{codeValue},
                #{remark},
                #{createdBy},
                now(),
                #{updatedBy},
                now())
        ON DUPLICATE KEY UPDATE id = #{id}
    </insert>

    <update id="updateCodeValueByCodeName" parameterType="com.ask.qa_service.entity.po.CommonCodePo">
        update common_code
        set code_value = #{codeValue},
            remark = #{remark},
            updated_by = #{updatedBy}
        where code_name = #{codeName}
    </update>

    <select id="selectByCodeName" resultMap="BaseResultMap">
        select id,
               code_name,
               code_value,
               remark,
               created_by,
               updated_by
        from common_code
        where code_name = #{codeName}
    </select>

    <select id="selectLatestQuestionId" resultType="java.lang.String">
        select code_value
        from common_code
        where code_name = ${@com.ask.qa_service.constant.Constant@LATEST_QUESTION_ID}
    </select>
</mapper>
